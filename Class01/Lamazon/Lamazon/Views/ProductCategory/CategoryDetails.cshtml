@using Lamazon.Models.Entities;
@model List<Product>

<h2>@ViewBag.CategoryName</h2>

@foreach (var product in Model)
{
    <p>
        @product.Name
        <a asp-action="ProductDetails" asp-route-id="@product.Id">Go To Details</a>
    </p>
}

@if (Model.Count == 0)
{
    <p>There are no products in @ViewBag.CategoryName</p>
}
