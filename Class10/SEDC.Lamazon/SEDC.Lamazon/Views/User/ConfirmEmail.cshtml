@using SEDC.Lamazon.ViewModels.Models.User
@model ConfirmUserEmailViewModel
@{
    ViewBag.Title = "Confirm Email";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Confirm Email</h2>
            <form method="post">
                <input asp-for="@Model.Id" hidden />
                <div class="code-inputs d-flex justify-content-center mb-4">
                    @for (int i = 0; i < Model.codeParts.Length; i++)
                    {
                        <input class="form-control mx-1 text-center" type="tel" name="codeParts" maxlength="1" autocomplete="off" asp-action="@Model.codeParts[i]" style="width: 50px;" pattern="[0-9]{1}" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0,1);" />
                    }
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/confirmEmail.js"></script>
}
