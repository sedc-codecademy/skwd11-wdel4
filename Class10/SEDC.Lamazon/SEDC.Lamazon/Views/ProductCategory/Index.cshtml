@using SEDC.Lamazon.ViewModels.Models.ProductCategory
@model List<ProductCategoryViewModel>


<div class="card shadow mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product Categories</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mb-2">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ProductCategory" asp-action="Create" class="btn btn-primary"> Create New Category</a>
            </div>
      </div>

      <table id="categoryTable" class="table table-bordered table-striped"> 
          <thead>
              <tr>
                  <th>Category Name</th>
                  <th>Actions</th>
              </tr>
          </thead>
      </table>
    </div>
</div>

@section Scripts {

    <script src="~/js/productCategory.js" ></script>
}