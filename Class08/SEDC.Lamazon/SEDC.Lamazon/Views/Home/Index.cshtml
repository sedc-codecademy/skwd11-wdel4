@using SEDC.Lamazon.ViewModels.Models.Product

@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach (var product in Model) 
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-3 shadow  rounded">
                        <img src="@product.ImageUrl" class="card-image-top rounded" />

                        <div class="card-body pb-0">
                            <div class=""> 
                                <p class="card-title h5 text-dark text-uppercase text-center">@product.Name</p>
                            </div>
                            <div class="">
                                <p class="text-dark text-center text-opacity-75">
                                    @product.Price $
                                </p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient form-control">Details</a>
                            <a asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-outline-primary bg-gradient py-2">
                                <i class="bi bi-plus-square"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
